<Window x:Class="WorldBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorldBuilder"
        mc:Ignorable="d"
        Title="World Builder" Height="485" Width="800">
    <Grid x:Name="gridMain" Height="454" VerticalAlignment="Top" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblInputKingdomName" Content="Kingdom Name" HorizontalAlignment="Left" Margin="24,72,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInputPhysicalArea" Content="Physical Area" HorizontalAlignment="Left" Margin="38,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInputPopulationDensity" Content="Population Density" HorizontalAlignment="Left" Margin="8,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInputKingdomAge" Content="Kingdom Age" HorizontalAlignment="Left" Margin="35,189,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtKingdomName" HorizontalAlignment="Left" Margin="125,76,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="273"/>
        <TextBox x:Name="txtPhysicalArea" HorizontalAlignment="Left" Margin="125,115,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtKingdomAge" HorizontalAlignment="Left" Margin="125,193,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbPopulationDensity" HorizontalAlignment="Left" Margin="125,152,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Desolate"/>
            <ComboBoxItem Content="Low"/>
            <ComboBoxItem Content="Settled"/>
            <ComboBoxItem Content="Average" IsSelected="True"/>
            <ComboBoxItem Content="High"/>
            <ComboBoxItem Content="Maximum"/>
        </ComboBox>
        <Label x:Name="lblDisplayKingdomName" Content="Kingdom Name" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="24"/>
        <Label x:Name="lblSquareMiles" Content="sq. miles" HorizontalAlignment="Left" Margin="250,111,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInputPopulationDensity2" Content="(80 persons per sq. mile)" HorizontalAlignment="Left" Margin="250,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblYears" Content="years" HorizontalAlignment="Left" Margin="250,189,0,0" VerticalAlignment="Top"/>
        <Grid Margin="0,226,0,122" ShowGridLines="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Physical Area" HorizontalAlignment="Right" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <Label Content="Population" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="1" VerticalAlignment="Center"/>
            <Label Content="Settlements" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="2" VerticalAlignment="Center"/>
            <Label Content="Castles" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
